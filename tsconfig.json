{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "target": "es2017",
        "outDir": "./build",
        "noImplicitAny": true,
        "strictNullChecks": false,
        "sourceMap": false,
        "watch": false,
        "traceResolution": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/typings/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}